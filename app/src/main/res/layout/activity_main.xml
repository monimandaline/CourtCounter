
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a6c03"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ronnie" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#aab3b3b3"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Player A"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_team_a_red"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccff0000"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Red" />

            <Button
                android:id="@+id/btn_team_a_yellow"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccFFBE32"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Yellow" />

            <Button
                android:id="@+id/btn_team_a_green"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#cc0B664C"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Green" />

            <Button
                android:id="@+id/btn_team_a_brown"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#cc755f54"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Brown" />

            <Button
                android:id="@+id/btn_team_a_blue"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#1b4180"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Blue" />

            <Button
                android:id="@+id/btn_team_a_pink"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#eaFF7F7F"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Pink" />

            <Button
                android:id="@+id/btn_team_a_black"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#cc000000"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Black" />


            <Button
                android:id="@+id/btn_team_a_white"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccffffff"
                android:textColor="#000000"
                android:textSize="16dp"
                android:text="White" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#aab3b3b3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Player B"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_team_b_red"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccff0000"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Red" />

            <Button
                android:id="@+id/btn_team_b_yellow"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccFFBE32"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Yellow" />

            <Button
                android:id="@+id/btn_team_b_green"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#cc0B664C"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Green" />

            <Button
                android:id="@+id/btn_team_b_brown"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#cc755f54"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Brown" />

            <Button
                android:id="@+id/btn_team_b_blue"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#1b4180"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Blue" />

            <Button
                android:id="@+id/btn_team_b_pink"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#eaFF7F7F"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Pink" />

            <Button
                android:id="@+id/btn_team_b_black"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#cc000000"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="Black" />


            <Button
                android:id="@+id/btn_team_b_white"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccffffff"
                android:textColor="#000000"
                android:textSize="16dp"
                android:text="White" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Reset" />


</RelativeLayout>

